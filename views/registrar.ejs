<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/head')  %>
<body>
    <%-include('./partials/header')  %>  
    <main class="mainclass">

            <form class="forms" action="user/register" method="post" class="registro">
                <div>
         
                    <input class="Texto" type="text" name="nombreCompleto" placeholder="Nombre y apellido" id="nombreCompleto">
                </div>
                <div>
         
                    <input class="Texto" type="text" name="usuario" placeholder="Nombre de usuario" id="usuario">
                </div>
                <div>
           
                    <input class="Texto" type="email" name="emailUsuario" placeholder="E-mail">
                </div>
                <div>
               
                            <input class="Texto" type="texto"  name="domicilio" placeholder="Domicilio" id="domicilio">
                </div>
                <div>
                    <div class="form-fecha">
                        <label for="fechaNacimiento">Fecha de Nacimiento</label>
                        <input type="date" name="fechaNacimiento" id="fechaNacimiento">
                    </div>  
                </div>
                              
                <div class="usr">
                    <h3>Perfil de usuario</h3>
                    <div class="user">
                        <div>
                            <input type="radio" name="perfilUsuario" value="comprador" id="comprador">
                            <label for="comprador">Comprador</label>
                        </div>
                        <div>
                            <input type="radio" name="perfilUsuario" value="vendedor" id="vendedor">
                            <label for="vendedor">Vendedor</label>
                        </div>
                        
                    </div>
                    
                </div>
                <div class="intereses">
                    <h3>Intereses</h3>
                    <div class="opciones-intereses">
                        <div>
                            <input type="checkbox" name="intereses" value="electro" id="electro">
                            <label for="electro">Electro</label>
                        </div>
                        <div>
                            <input type="checkbox" name="intereses" value="moda" id="moda">
                            <label for="moda">Moda</label>
                        </div>
                        <div>
                            <input type="checkbox" name="intereses" value="hogar" id="hogar">
                            <label for="hogar">Hogar</label>
                        </div>
                        <div>
                            <input type="checkbox" name="intereses" value="jugueteria" id="jugueteria">
                            <label for="jugueteria">Juguetería</label>
                        </div>
                        <div>
                            <input type="checkbox" name="intereses" value="vidaSana" id="vidaSana">
                            <label for="vidaSana">Vida Sana</label>
                        </div>  
                    </div>
                    </div>
 
                <div>
                    <label for="fotoUsuario">Foto de usuario</label>
                    <input type="file" name="fotoUsuario" accept=".jpg, .png" id="fotoUsuario">                
                </div>
                <div class="form-contrasenias">
                    <div>
                       
                        <input class="Texto" type="password" name="contraseña" placeholder="Ingresar contraseña">
                    </div>
                    <div>
                       
                        <input class="Texto" type="password" name="contraseñaConfirma" placeholder="Confirmar contraseña">
                    </div>
                </div>
                <div class="botones">                
                    <button class="botones-form boton-enviar" type="submit">Enviar</button>
                    <button class="botones-form boton-cancelar" type="reset">Cancelar</button>
                </div>
                
    
            </form>

        
    </main>
    <%-include('./partials/footer')  %>
    
</body>
</html>
